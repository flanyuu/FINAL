<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name="Aplicacion"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_mi_icono"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_mi_icono"
        android:supportsRtl="true"
        android:theme="@style/Theme.MisLugares">
        <meta-data android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key"/>
        <!-- LoginActivity como actividad principal (LAUNCHER) -->
        <activity
            android:name=".presentacion.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MisLugares.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentacion.MenuActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.MisLugares.NoActionBar"/>

        <activity
            android:name=".presentacion.MainActivity"
            android:exported="false"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/Theme.MisLugares.NoActionBar"/>
        <activity
            android:name=".presentacion.RutasActivity"
            android:exported="false"
            android:label="@string/rutas"
            android:theme="@style/Theme.MisLugares.NoActionBar"
            android:parentActivityName=".presentacion.MenuActivity"/>
        <activity android:name=".presentacion.AcercaDeActivity"
            android:label="Acerca de ..."
            android:theme="@style/Theme.MisLugares"/>
        <activity
            android:name=".presentacion.VistaLugarActivity"
            android:label="Vista del lugar"
            android:theme="@style/Theme.MisLugares"/>
        <activity
            android:name=".presentacion.EdicionLugarActivity"
            android:label="Edicion Lugar"
            android:theme="@style/Theme.MisLugares"/>
        <activity android:name=".presentacion.PreferenciasActivity"
            android:label="Preferencias"
            android:theme="@style/Theme.MisLugares"/>
        <activity
            android:name=".presentacion.MapaActivity"
            android:theme="@style/Theme.MisLugares"/>
        <activity
            android:name=".presentacion.CrearRutaActivity"
            android:label="@string/crear_ruta"
            android:theme="@style/Theme.MisLugares"/>
        <activity
            android:name=".presentacion.RutaPuntosActivity"
            android:label="Puntos de la ruta"
            android:theme="@style/Theme.MisLugares"/>
        <activity
            android:name=".presentacion.RutaActivity"
            android:label="Ruta al lugar"
            android:theme="@style/Theme.MisLugares"/>
        <provider
            android:authorities="com.example.misLugares.fileProvider"
            android:name="androidx.core.content.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>
        </provider>
    </application>

</manifest>