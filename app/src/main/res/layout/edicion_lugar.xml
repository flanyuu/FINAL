<?xml version="1.0" encoding="utf-8"?>
<!--
  DiseÃ±o fiel a CarPoolin:
  - Fondo slate azul en la parte superior (mismo color que el menÃº)
  - Card blanca grande que emerge desde abajo con todos los campos
  - Inputs limpios con lÃ­nea inferior teal, sin bordes agresivos
  - TipografÃ­a bold oscura para labels, gris suave para hints
-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5B9EC9">

    <!-- Header: tÃ­tulo sobre el fondo cielo -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingTop="52dp"
        android:paddingStart="28dp"
        android:paddingEnd="28dp"
        android:paddingBottom="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo lugar"
            android:textSize="13sp"
            android:textColor="#CCE8FFFF"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.04"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar informaciÃ³n"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>

    <!-- Card blanca que flota desde el 35% de la pantalla -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="148dp"
        android:fillViewport="true"
        android:overScrollMode="never">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="36dp"
            app:cardElevation="20dp"
            app:cardBackgroundColor="#FFFFFF"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="30dp"
                android:paddingBottom="40dp">

                <!-- â”€â”€ NOMBRE â”€â”€ -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NOMBRE DEL LUGAR"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#5BC8C8"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.15"
                    android:layout_marginBottom="6dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/input_bg"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ"
                        android:textSize="16sp"
                        android:textColor="#5BC8C8"
                        android:layout_marginEnd="12dp"/>

                    <EditText
                        android:id="@+id/nombre"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:background="@null"
                        android:hint="Ej: Estadio Universitario"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:textSize="15sp"
                        android:textColor="#1C2B3A"
                        android:textColorHint="#B0C4D4"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>

                <!-- â”€â”€ TIPO â”€â”€ -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TIPO DE LUGAR"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#5BC8C8"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.15"
                    android:layout_marginBottom="6dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/input_bg"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ·"
                        android:textSize="16sp"
                        android:layout_marginEnd="12dp"/>

                    <Spinner
                        android:id="@+id/tipo"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:background="@null"
                        android:paddingStart="0dp"
                        android:spinnerMode="dropdown"
                        android:textSize="15sp"/>
                </LinearLayout>

                <!-- â”€â”€ DIRECCIÃ“N â”€â”€ -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DIRECCIÃ“N"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#5BC8C8"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.15"
                    android:layout_marginBottom="6dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/input_bg"
                    android:paddingStart="16dp"
                    android:paddingEnd="8dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“"
                        android:textSize="16sp"
                        android:layout_marginEnd="12dp"/>

                    <EditText
                        android:id="@+id/direccion"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Calle, colonia, ciudad"
                        android:inputType="textPostalAddress"
                        android:maxLines="1"
                        android:textSize="15sp"
                        android:textColor="#1C2B3A"
                        android:textColorHint="#B0C4D4"
                        android:fontFamily="sans-serif"/>

                    <ImageButton
                        android:id="@+id/btnSeleccionarEnMapa"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Elegir ubicaciÃ³n en el mapa"
                        android:padding="8dp"
                        android:src="@android:drawable/ic_dialog_map"
                        app:tint="#5BC8C8"/>
                </LinearLayout>

                <!-- â”€â”€ TELÃ‰FONO â”€â”€ -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TELÃ‰FONO"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#5BC8C8"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.15"
                    android:layout_marginBottom="6dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/input_bg"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ž"
                        android:textSize="16sp"
                        android:layout_marginEnd="12dp"/>

                    <EditText
                        android:id="@+id/telefono"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:background="@null"
                        android:hint="NÃºmero de contacto"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:textSize="15sp"
                        android:textColor="#1C2B3A"
                        android:textColorHint="#B0C4D4"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>

                <!-- â”€â”€ SITIO WEB â”€â”€ -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SITIO WEB"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#5BC8C8"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.15"
                    android:layout_marginBottom="6dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/input_bg"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ"
                        android:textSize="16sp"
                        android:layout_marginEnd="12dp"/>

                    <EditText
                        android:id="@+id/url"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:background="@null"
                        android:hint="https://..."
                        android:inputType="textUri"
                        android:maxLines="1"
                        android:textSize="15sp"
                        android:textColor="#1C2B3A"
                        android:textColorHint="#B0C4D4"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>

                <!-- â”€â”€ COMENTARIOS â”€â”€ -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COMENTARIOS"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#5BC8C8"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.15"
                    android:layout_marginBottom="6dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="top"
                    android:background="@drawable/input_bg"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="12dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¬"
                        android:textSize="16sp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="4dp"/>

                    <EditText
                        android:id="@+id/comentario"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:background="@null"
                        android:hint="Escribe tus notas sobre este lugar..."
                        android:inputType="textMultiLine|textCapSentences"
                        android:gravity="top|start"
                        android:textSize="15sp"
                        android:textColor="#1C2B3A"
                        android:textColorHint="#B0C4D4"
                        android:fontFamily="sans-serif"
                        android:scrollbars="vertical"
                        android:maxLines="6"
                        android:minLines="3"/>
                </LinearLayout>

                <!-- â”€â”€ BOTONES: Cancelar + Guardar â”€â”€ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="28dp"
                    android:weightSum="2">

                    <!-- Cancelar: ghost con borde teal -->
                    <LinearLayout
                        android:id="@+id/btnCancelar"
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:background="@drawable/btn_cancelar_bg"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cancelar"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#5BC8C8"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.02"/>
                    </LinearLayout>

                    <!-- Guardar: sÃ³lido teal -->
                    <LinearLayout
                        android:id="@+id/btnGuardar"
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:gravity="center"
                        android:background="@drawable/btn_guardar_bg"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:elevation="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guardar"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.02"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </ScrollView>

</RelativeLayout>