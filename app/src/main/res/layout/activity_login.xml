<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#301052">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="75dp"
            app:cardElevation="8dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@mipmap/ic_mi_icono"
                android:padding="12dp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mis Lugares"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:letterSpacing="0.05"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descubre y guarda tus sitios favoritos"
            android:textSize="14sp"
            android:textColor="@color/teal_200"
            android:layout_marginBottom="48dp"
            android:alpha="0.9" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="12dp"
            app:strokeWidth="0dp">

            <Button
                android:id="@+id/btnGoogleSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Iniciar sesión con Google"
                android:padding="18dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:drawablePadding="12dp"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Botón de bypass para pruebas -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeWidth="1dp"
            app:strokeColor="#FF9800">

            <Button
                android:id="@+id/btnBypass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modo Prueba"
                android:padding="14dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:backgroundTint="#FF9800"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</RelativeLayout>